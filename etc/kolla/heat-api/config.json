{
    "command": "heat-api",
    "config_files": [
        {
            "source": "/var/lib/kolla/config_files/heat.conf",
            "dest": "/etc/heat/heat.conf",
            "owner": "heat",
            "perm": "0600"
        },
        {
            "source": "/var/lib/kolla/config_files/policy.json",
            "dest": "/etc/heat/policy.json",
            "owner": "heat",
            "perm": "0600",
            "optional": true
        }
    ],
    "permissions": [
        {
            "path": "/var/log/kolla/heat",
            "owner": "heat:heat",
            "recurse": true
        }
    ]
}
